<?xml version="1.0" encoding="utf-8" ?>
<views:Popup 
    x:Class="TreeGlyph.UI.Views.TooltipPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui">

    <Border Background="{StaticResource OverlayBackground}"
            Padding="6"
            StrokeShape="RoundRectangle 4"
            Stroke="{StaticResource DividerBrush}">
        <Label x:Name="TooltipLabel"
               Style="{StaticResource TooltipLabelStyle}" />
    </Border>
</views:Popup>