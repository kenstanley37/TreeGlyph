<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:UI.ViewModels.MainPageViewModel"
             x:Class="UI.Views.MainPageViews.OptionsDrawerView"
             x:Name="Root"
             x:DataType="vm:OptionsPanelViewModel"
             Padding="0">


    <!-- âš™ï¸ Options Panel -->
    <Border BackgroundColor="{AppThemeBinding Light=#f0f0f0, Dark=#1a1a1a}"
            Stroke="{AppThemeBinding Light=Gray, Dark=DarkGray}"
            StrokeShape="RoundRectangle 8"
            Padding="12"
            VerticalOptions="Fill"
            HorizontalOptions="Fill">
        <Border.Shadow>
            <Shadow Brush="Black" Opacity="0.2" Radius="8" Offset="4,4" />
        </Border.Shadow>

        <VerticalStackLayout Spacing="12">

            <!-- ðŸ“ Max Depth -->
            <HorizontalStackLayout Spacing="6" VerticalOptions="Center">
                <Label Text="Max Depth:"
                       FontSize="14"
                       TextColor="{AppThemeBinding Light=Black, Dark=White}" />

                <Label Text="(i)"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=#007aff, Dark=#66ccff}"
                       VerticalOptions="Center"
                       Margin="0,0,0,0">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ShowMaxDepthInfoCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>



            <Slider Minimum="1"
                    Maximum="99"
                    Value="{Binding MaxDepth}" />

            <Label Text="{Binding MaxDepth, StringFormat='Max Depth: {0}'}"
                   FontSize="14"
                   TextColor="{AppThemeBinding Light=Black, Dark=White}" />

            <!-- ðŸ’¾ Auto Save Toggle -->
            <HorizontalStackLayout VerticalOptions="Center" Spacing="6">
                <Label Text="Auto-Save"
                       FontSize="12"
                       VerticalOptions="Center"
                       TextColor="{AppThemeBinding Light=Black, Dark=White}" />

                <Image Source="info_icon.png"
                       WidthRequest="16"
                       HeightRequest="16"
                       VerticalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ShowAutoSaveInfoCommand}" />
                    </Image.GestureRecognizers>
                </Image>

                <Switch IsToggled="{Binding AutoSaveIgnoreFile}"
                        
                        OnColor="{AppThemeBinding Light=#4caf50, Dark=#80e27e}"
                        ThumbColor="{AppThemeBinding Light=White, Dark=LightGray}"
                        VerticalOptions="Center" />
            </HorizontalStackLayout>

            <!-- Add more settings here -->

        </VerticalStackLayout>
    </Border>

</ContentView>