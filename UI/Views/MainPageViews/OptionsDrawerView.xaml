<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TreeGlyph.UI.ViewModels.MainPageViewModel"
             x:Class="TreeGlyph.UI.Views.MainPageViews.OptionsDrawerView"
             x:Name="Root"
             x:DataType="vm:OptionsPanelViewModel"
             Padding="0">

    <!-- ⚙️ Options Panel -->
    <Border BackgroundColor="{StaticResource PanelBackground}"
            Stroke="{StaticResource DividerBrush}"
            StrokeShape="RoundRectangle 8"
            Padding="12"
            VerticalOptions="Fill"
            HorizontalOptions="Fill">
        <Border.Shadow>
            <Shadow Brush="Black" Opacity="0.2" Radius="8" Offset="4,4" />
        </Border.Shadow>

        <VerticalStackLayout Spacing="12">

            <!-- 📏 Max Depth -->
            <HorizontalStackLayout Spacing="6" VerticalOptions="Center">
                <Label Text="Max Depth:"
                       Style="{StaticResource BodyText}" />

                <Label Text="(i)"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="{StaticResource AccentColor}"
                       VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ShowMaxDepthInfoCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

            <Slider Minimum="1"
                    Maximum="99"
                    Value="{Binding MaxDepth}" />

            <Label Text="{Binding MaxDepth, StringFormat='Max Depth: {0}'}"
                   Style="{StaticResource BodyText}" />

            <!-- 💾 Auto Save Toggle -->
            <HorizontalStackLayout VerticalOptions="Center" Spacing="6">
                <Label Text="Auto-Save"
                       Style="{StaticResource CaptionText}" />

                <Image Source="info_icon.png"
                       WidthRequest="16"
                       HeightRequest="16"
                       VerticalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ShowAutoSaveInfoCommand}" />
                    </Image.GestureRecognizers>
                </Image>

                <Switch IsToggled="{Binding AutoSaveIgnoreFile}"
                        Style="{StaticResource StandardSwitch}" />
            </HorizontalStackLayout>

            <!-- Add more settings here -->

        </VerticalStackLayout>
    </Border>
</ContentView>