<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TreeGlyph.UI.ViewModels.MainPageViewModel"
             x:Class="TreeGlyph.UI.Views.MainPageViews.ToolbarView"
             x:Name="Root"
             x:DataType="vm:ToolbarViewModel">

    <Grid HeightRequest="44"
      Padding="12,0"
      BackgroundColor="{AppThemeBinding Light=#f5f5f5, Dark=#222222}"
      ColumnSpacing="12"
      HorizontalOptions="Fill"
      ColumnDefinitions="Auto,*,Auto">

        <!-- ðŸ”§ Navigation Buttons -->
        <HorizontalStackLayout Grid.Column="0" Spacing="6" VerticalOptions="Center">
            <Button Text="Browse" Command="{Binding BrowseFolderCommand}" Style="{StaticResource NavButtonStyle}" />
            <Button Text="Generate" Command="{Binding GenerateTreeAsyncCommand}" Style="{StaticResource NavButtonStyle}" />
            <Button Text="Save ASCII" Command="{Binding SaveTreeCommand}" Style="{StaticResource NavButtonStyle}" />
            <Button Text="Clear" Command="{Binding ClearTreeCommand}" Style="{StaticResource NavButtonStyle}" />
            <Button Text="Save Ignore" Command="{Binding SaveIgnoreFileCommand}" Style="{StaticResource NavButtonStyle}" />
        </HorizontalStackLayout>



        <!-- ðŸ“– About + Logs -->
        <HorizontalStackLayout Grid.Column="2" HorizontalOptions="End" VerticalOptions="Center" Spacing="6">
            <Button Text="View Logs" Command="{Binding ViewLogsCommand}" Style="{StaticResource NavButtonStyle}" />
            <Button Text="About" Command="{Binding ShowAboutCommand}" Style="{StaticResource NavButtonStyle}" />
        </HorizontalStackLayout>

    </Grid>
</ContentView>
