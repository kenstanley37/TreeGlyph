<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:UI.Converters"
             x:Class="UI.App">

    <Application.Resources>
        <ResourceDictionary>

            <!-- 🔁 Opacity Converter -->
            <local:BoolToOpacityConverter x:Key="BoolToOpacityConverter"
                                          TrueOpacity="1.0"
                                          FalseOpacity="0.4" />

            <local:InverseBoolConverter x:Key="InverseBoolConverter" />


            <!-- 🎨 App Theme Resources -->

            <ResourceDictionary.MergedDictionaries>
                <!-- 🎨 Theme and Color System -->
                <ResourceDictionary Source="Resources/Styles/ThemeColors.xaml" />

                <!-- 🔠 Typography and Layout -->
                <ResourceDictionary Source="Resources/Styles/FontSizes.xaml" />
                <ResourceDictionary Source="Resources/Styles/LayoutSpacing.xaml" />

                <!-- 🧱 Component Styles -->
                <ResourceDictionary Source="Resources/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/BorderStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/EditorStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/LabelStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/EntryStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/SwitchStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/ModalStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/SliderStyles.xaml" />
                <ResourceDictionary>
                    <local:CategorySelectionConverter x:Key="CategorySelectionConverter" />
                </ResourceDictionary>

            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>
</Application>