<Shell
    x:Class="TreeGlyph.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TreeGlyph.UI.Views"
    xmlns:mainviews="clr-namespace:TreeGlyph.UI.Views.MainPageViews"
    Title="TreeGlyph"
    FlyoutBackgroundColor="{AppThemeBinding Light=White, Dark=#111}"
    FlyoutBehavior="Flyout">

    <Shell.Resources>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
        </Style>
    </Shell.Resources>

    <FlyoutItem Title="Main" Icon="main_icon.png">
        <ShellContent ContentTemplate="{DataTemplate mainviews:MainPage}" Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="About" Icon="about_icon.png">
        <ShellContent ContentTemplate="{DataTemplate views:AboutPage}" Route="AboutPage" />
    </FlyoutItem>

    <FlyoutItem Title="Logs" Icon="logs_icon.png">
        <ShellContent ContentTemplate="{DataTemplate views:LogViewPage}" Route="LogViewPage" />
    </FlyoutItem>

</Shell>