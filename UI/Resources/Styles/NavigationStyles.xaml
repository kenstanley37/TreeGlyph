<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- 🧭 Shell Colors -->
    <Color x:Key="ShellBackgroundColor">#0D0D0D</Color>
    <Color x:Key="ShellForegroundColor">#E0E0E0</Color>
    <Color x:Key="ShellAccentColor">#569CD6</Color>
    <Color x:Key="ShellUnselectedColor">#888888</Color>

    <!-- 🧭 Navigation Button -->
    <Style x:Key="NavButtonStyle" TargetType="Button">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Padding" Value="10,4" />
        <Setter Property="BackgroundColor" Value="{StaticResource PanelBackground}" />
        <Setter Property="TextColor" Value="{StaticResource BaseForeground}" />
        <Setter Property="BorderColor" Value="{StaticResource DividerColor}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="CornerRadius" Value="4" />

        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource AccentColor}" />
                            <Setter Property="TextColor" Value="{StaticResource BaseBackground}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.5" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

</ResourceDictionary>