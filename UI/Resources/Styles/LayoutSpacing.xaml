<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- 📐 Padding -->
    <Thickness x:Key="PagePadding">12</Thickness>
    <Thickness x:Key="SectionPadding">8,4</Thickness>
    <Thickness x:Key="ControlPadding">6,2</Thickness>

    <!-- 📏 Margin -->
    <Thickness x:Key="SectionMargin">0,8,0,0</Thickness>
    <Thickness x:Key="ControlMargin">0,4,0,4</Thickness>
    <Thickness x:Key="TightMargin">0,2,0,2</Thickness>

    <!-- ↔️ Spacing -->
    <x:Double x:Key="StackSpacingSmall">4</x:Double>
    <x:Double x:Key="StackSpacingMedium">8</x:Double>
    <x:Double x:Key="StackSpacingLarge">12</x:Double>

</ResourceDictionary>