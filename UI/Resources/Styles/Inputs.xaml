<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             >

    <!-- 🎚️ Slider Style -->
    <Style TargetType="Slider">
        <Setter Property="ThumbColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
        <Setter Property="MinimumTrackColor" Value="{AppThemeBinding Light=#444444, Dark=#dddddd}" />
        <Setter Property="MaximumTrackColor" Value="{AppThemeBinding Light=#cccccc, Dark=#444444}" />
    </Style>

    <!-- 🔘 RadioButton Style -->
    <Style TargetType="RadioButton">
        <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
    </Style>

    <!-- ☑️ CheckBox Style -->
    <Style TargetType="CheckBox">
        <Setter Property="Color" Value="{AppThemeBinding Light=Black, Dark=White}" />
    </Style>

    <!-- 🔄 Switch Style -->
    <Style TargetType="Switch">
        <Setter Property="OnColor" Value="{AppThemeBinding Light=#007aff, Dark=#0a84ff}" />
        <Setter Property="ThumbColor" Value="{AppThemeBinding Light=White, Dark=Gray}" />
    </Style>

    <!-- 📅 DatePicker Style -->
    <Style TargetType="DatePicker">
        <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="BackgroundColor" Value="Transparent" />
    </Style>

    <!-- ⏰ TimePicker Style -->
    <Style TargetType="TimePicker">
        <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="BackgroundColor" Value="Transparent" />
    </Style>

    <!-- 🔽 Picker Style -->
    <Style TargetType="Picker">
        <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="BackgroundColor" Value="Transparent" />
    </Style>

</ResourceDictionary>