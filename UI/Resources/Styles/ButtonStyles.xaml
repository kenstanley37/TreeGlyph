<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- 🔵 Primary Action -->
    <Style x:Key="AccentButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource AccentColor}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="12,6" />
    </Style>

    <!-- ⚪️ Secondary Action -->
    <Style x:Key="UtilityButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource PanelBackground}" />
        <Setter Property="TextColor" Value="{StaticResource BaseForeground}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="BorderColor" Value="{StaticResource DividerColor}" />
        <Setter Property="BorderWidth" Value="1" />
    </Style>

    <!-- 🔴 Destructive Action -->
    <Style x:Key="DangerButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource ErrorColor}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="12,6" />
    </Style>

    <!-- 🧊 Icon-Only Button -->
    <Style x:Key="IconButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource BaseForeground}" />
        <Setter Property="Padding" Value="6" />
        <Setter Property="WidthRequest" Value="32" />
        <Setter Property="HeightRequest" Value="32" />
    </Style>

    <!-- 👻 Ghost Button -->
    <Style x:Key="GhostButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource AccentColor}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="BorderColor" Value="{StaticResource AccentColor}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="CornerRadius" Value="6" />
    </Style>

</ResourceDictionary>