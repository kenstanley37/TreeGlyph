<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- 📝 Standard Editor -->
    <Style x:Key="StandardEditor" TargetType="Editor">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="Consolas" />
        <Setter Property="TextColor" Value="{StaticResource BaseForeground}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="PlaceholderColor" Value="{StaticResource MutedForeground}" />
        <Setter Property="AutoSize" Value="Disabled" />
        <Setter Property="HeightRequest" Value="72" />
        <Setter Property="Margin" Value="0,4,0,8" />
        <Setter Property="VerticalOptions" Value="Start" />
        <Setter Property="HorizontalOptions" Value="Fill" />
    </Style>

    <!-- 🔍 Search Bar -->
    <Style x:Key="SearchBarStyle" TargetType="SearchBar">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource BaseForeground}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource MutedForeground}" />
        <Setter Property="BackgroundColor" Value="{StaticResource PanelBackground}" />
        <Setter Property="Margin" Value="0,4,0,8" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="HorizontalOptions" Value="Fill" />
    </Style>

    <!-- 🧪 Log Viewer Editor -->
    <Style x:Key="LogEditorStyle" TargetType="Editor">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontFamily" Value="Consolas" />
        <Setter Property="TextColor" Value="{StaticResource BaseForeground}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="IsReadOnly" Value="True" />
        <Setter Property="AutoSize" Value="Disabled" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="VerticalOptions" Value="FillAndExpand" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
    </Style>

</ResourceDictionary>