<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- 🔄 Default Switch -->
    <Style x:Key="DefaultSwitchStyle" TargetType="Switch">
        <Setter Property="OnColor" Value="{StaticResource AccentColor}" />
        <Setter Property="ThumbColor" Value="White" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Margin" Value="{StaticResource ControlMargin}" />
    </Style>

    <!-- ⚠️ Warning Switch -->
    <Style x:Key="WarningSwitchStyle" TargetType="Switch">
        <Setter Property="OnColor" Value="{StaticResource WarningColor}" />
        <Setter Property="ThumbColor" Value="White" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Margin" Value="{StaticResource ControlMargin}" />
    </Style>

</ResourceDictionary>