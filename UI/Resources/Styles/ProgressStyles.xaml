<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ⏳ Activity Spinner -->
    <Style x:Key="StandardActivityIndicator" TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{StaticResource AccentColor}" />
        <Setter Property="HeightRequest" Value="32" />
        <Setter Property="WidthRequest" Value="32" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <!-- 📊 Progress Bar -->
    <Style x:Key="StandardProgressBar" TargetType="ProgressBar">
        <Setter Property="ProgressColor" Value="{StaticResource AccentColor}" />
        <Setter Property="BackgroundColor" Value="{StaticResource DividerColor}" />
        <Setter Property="HeightRequest" Value="6" />
        <Setter Property="Margin" Value="0,8,0,8" />
        <Setter Property="HorizontalOptions" Value="Fill" />
    </Style>

    <!-- 🧪 Diagnostic Progress -->
    <Style x:Key="DiagnosticProgressBar" TargetType="ProgressBar">
        <Setter Property="ProgressColor" Value="{StaticResource WarningColor}" />
        <Setter Property="BackgroundColor" Value="{StaticResource DividerColor}" />
        <Setter Property="HeightRequest" Value="6" />
        <Setter Property="Margin" Value="0,8,0,8" />
        <Setter Property="HorizontalOptions" Value="Fill" />
    </Style>

</ResourceDictionary>