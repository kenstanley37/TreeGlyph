<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- 🟦 Default Border Style -->
    <Style x:Key="DefaultBorderStyle" TargetType="Border">
        <Setter Property="Stroke" Value="{StaticResource BorderDark}" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="6" />
            </Setter.Value>
        </Setter>
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Padding" Value="6" />
    </Style>

    <!-- ⚠️ Error Border Style -->
    <Style x:Key="ErrorBorderStyle" TargetType="Border">
        <Setter Property="Stroke" Value="{StaticResource ErrorColor}" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="6" />
            </Setter.Value>
        </Setter>
        <Setter Property="StrokeThickness" Value="1.5" />
        <Setter Property="Background" Value="{StaticResource WarningColor}" />
        <Setter Property="Padding" Value="6" />
    </Style>

</ResourceDictionary>