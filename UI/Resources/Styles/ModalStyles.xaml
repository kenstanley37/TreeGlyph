<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- 🪟 Modal Container -->
    <Style x:Key="ModalContainerStyle" TargetType="Border">
        <Setter Property="Padding" Value="16" />
        <Setter Property="Stroke" Value="{StaticResource BorderDark}" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="12" />
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="{StaticResource BackgroundDark}" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="WidthRequest" Value="400" />
        <Setter Property="MinimumHeightRequest" Value="200" />
    </Style>

    <!-- 🧾 Modal Title -->
    <Style x:Key="ModalTitleStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource FontSizeLarge}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextLight}" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

    <!-- 📄 Modal Body Text -->
    <Style x:Key="ModalBodyStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}" />
        <Setter Property="TextColor" Value="{StaticResource TextLight}" />
        <Setter Property="Margin" Value="0,0,0,12" />
    </Style>

</ResourceDictionary>