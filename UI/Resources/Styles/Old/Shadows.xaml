<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             >

    <!-- 🕶️ Default Shadow -->
    <Style TargetType="Shadow" x:Key="DefaultShadow">
        <Setter Property="Brush" Value="{AppThemeBinding Light=Black, Dark=White}" />
        <Setter Property="Opacity" Value="0.2" />
        <Setter Property="Radius" Value="8" />
        <Setter Property="Offset" Value="4,4" />
    </Style>

    <!-- 🌄 Elevated Shadow -->
    <Style TargetType="Shadow" x:Key="ElevatedShadow">
        <Setter Property="Brush" Value="{AppThemeBinding Light=Black, Dark=White}" />
        <Setter Property="Opacity" Value="0.3" />
        <Setter Property="Radius" Value="12" />
        <Setter Property="Offset" Value="6,6" />
    </Style>

    <!-- 🧊 Subtle Shadow -->
    <Style TargetType="Shadow" x:Key="SubtleShadow">
        <Setter Property="Brush" Value="{AppThemeBinding Light=Black, Dark=White}" />
        <Setter Property="Opacity" Value="0.1" />
        <Setter Property="Radius" Value="4" />
        <Setter Property="Offset" Value="2,2" />
    </Style>

</ResourceDictionary>