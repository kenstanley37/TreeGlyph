<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             >

    <!-- 🧱 Border Style (replaces Frame) -->
    <Style TargetType="Border" x:Key="CardStyle">
        <Setter Property="Padding" Value="12" />
        <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray950}}" />
        <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="8" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ▓ BoxView Style -->
    <Style TargetType="BoxView">
        <Setter Property="Color" Value="{AppThemeBinding Light=#cccccc, Dark=#444444}" />
        <Setter Property="HeightRequest" Value="1" />
        <Setter Property="HorizontalOptions" Value="Fill" />
    </Style>

    <!-- 🔄 RefreshView Style -->
    <Style TargetType="RefreshView">
        <Setter Property="BackgroundColor" Value="Transparent" />
    </Style>

    <!-- 📋 ListView Style -->
    <Style TargetType="ListView">
        <Setter Property="SeparatorVisibility" Value="None" />
        <Setter Property="BackgroundColor" Value="Transparent" />
    </Style>

    <!-- 🧹 SwipeItem Style -->
    <Style TargetType="SwipeItem">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#eeeeee, Dark=#222222}" />
    </Style>

</ResourceDictionary>