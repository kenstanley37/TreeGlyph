<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             >

    <!-- 📄 Base Page Style -->
    <Style TargetType="Page">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}" />
    </Style>

    <!-- 🧭 Shell Style -->
    <Style TargetType="Shell">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}" />
        <Setter Property="ForegroundColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
        <Setter Property="TitleColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
        <Setter Property="DisabledColor" Value="{AppThemeBinding Light=#888888, Dark=#666666}" />
        <Setter Property="UnselectedColor" Value="{AppThemeBinding Light=#444444, Dark=#aaaaaa}" />
    </Style>

    <!-- 🧭 NavigationPage Style -->
    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}" />
        <Setter Property="BarTextColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
    </Style>

    <!-- 🗂️ TabbedPage Style -->
    <Style TargetType="TabbedPage">
        <Setter Property="BarBackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}" />
        <Setter Property="BarTextColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
    </Style>

</ResourceDictionary>