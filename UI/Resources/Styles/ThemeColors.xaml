<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- 🎨 Backgrounds -->
    <SolidColorBrush x:Key="BackgroundLight" Color="#f5f5f5" />
    <SolidColorBrush x:Key="BackgroundDark" Color="#1e1e1e" />

    <!-- 🖋 Text -->
    <SolidColorBrush x:Key="TextLight" Color="#333333" />
    <SolidColorBrush x:Key="TextDark" Color="#cccccc" />

    <!-- 🌟 Accents -->
    <SolidColorBrush x:Key="AccentColor" Color="#569cd6" />
    <SolidColorBrush x:Key="ErrorColor" Color="#cc0000" />
    <SolidColorBrush x:Key="WarningColor" Color="#ffcc00" />

    <!-- 🧱 Borders -->
    <SolidColorBrush x:Key="BorderLight" Color="#dddddd" />
    <SolidColorBrush x:Key="BorderDark" Color="#444444" />

</ResourceDictionary>